

  <h2><%= @restaurant.id %></h2>
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>

<p><%= link_to "edit", edit_restaurant_path(@restaurant) %></p>
<p><%= link_to "delete the restaurant", restaurant_path(@restaurant),
method: :delete, data: {confirm: "Are you sure?"} %></p>

<p><%= link_to "Add a review", new_restaurant_review_path(@restaurant) %></p>
<h2>Reviews</h2>

  <% @restaurant.reviews.each do |review| %>
    <p><%= review.content %></p>
    <p><%= review.rating %></p>
    <p><%= link_to "delete the review", restaurant_review_path(@restaurant, review),
method: :delete, data: {confirm: "Are you sure?"} %></p>
    <% end  %>
